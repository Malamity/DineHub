@page "{id:int}"
@model RazorPagesApp.Pages.User.DeleteModel
@{
ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<h4>Are you sure you want to delete this user?</h4>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Username
        </dt>
        <dd class = "col-sm-10">
            @Model.User.Username
        </dd>
        <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @Model.User.Role
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
