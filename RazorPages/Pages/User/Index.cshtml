@page
@model RazorPagesApp.Pages.User.IndexModel
@{
ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
    <tr>
        <td>@user.Id</td>
        <td>@user.Username</td>
        <td>@user.Role</td>
        <td>
            <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
            <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
