@page
@model RazorPagesApp.Pages.User.IndexModel
@{
ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Role</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
    <tr>
        <td>@user.Id</td>
        <td>@user.Username</td>
        <td>@user.Role</td>
        <td>
            <a asp-page="./Edit" asp-route-id="@user.Id">Edit</a> |
            <a asp-page="./Delete" asp-route-id="@user.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
