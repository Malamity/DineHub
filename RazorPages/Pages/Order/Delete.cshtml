@page "{id:int}"
@model RazorPagesApp.Pages.Order.DeleteModel
@{
ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h4>Are you sure you want to delete this order?</h4>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Model.Order.Id
        </dd>
        <dt class = "col-sm-2">
            UserId
        </dt>
        <dd class = "col-sm-10">
            @Model.Order.UserId
        </dd>
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Model.Order.Total
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
