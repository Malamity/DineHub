@page
@model RazorPagesApp.Pages.Order.IndexModel
@{
ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Order Id</th>
        <th>User Id</th>
        <th>Items</th>
        <th>Total</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
    <tr>
        <td>@order.Id</td>
        <td>@order.UserId</td>
        <td>
            <ul>
                @foreach (var item in order.Items)
                {
                <li>@item.MenuItemName - Quantity: @item.Quantity, Price: @item.Price</li>
                }
            </ul>
        </td>
        <td>@order.Total</td>
        <td>
            <a asp-page="Edit" asp-route-id="@order.Id" class="btn btn-warning">Edit</a>
            <a asp-page="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
